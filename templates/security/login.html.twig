{% extends 'base.html.twig' %}

{% block title %}Sign in - Dream Holiday{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block body %}
    <div id="hero">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-10 col-sm-8 col-md-6 col-lg-6">
                    {{ form_start(form) }}
                    <div class="row login-form-row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-6 form-space">
                            <h3 class="form-title">Sign-In</h3>
                            <div class="form-group">
                                <label for="inputEmail">{{ form_label(form.email) }}</label>
                                {{ form_widget(form.email, {'attr': {'value': last_username}}) }}
                            </div>
                            <div class="form-group">
                                <label for="inputPassword">{{ form_label(form.password) }}</label>
                                {{ form_widget(form.password) }}
                            </div>
                            <div class="form-check">
                                <input type="checkbox" name="_remember_me">
                                <label class="form-check-label">Remember me</label>
                            </div>
                            <div class="my-custom-class-for-errors">
                                {% if error %}
                                <small id="emailHelp" class="form-text text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</small>
                                {% endif %}
                            </div>
                            <div class="text-center" id="login-button-container">
                                {{ form_widget(form.submit) }}
                            </div>
                            <div class="text-center" id="create-account-section">
                                <p>Not registered?
                                <a href="{{ path('app_register') }}">Create an Account</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
