{% extends 'base.html.twig' %}

{% block title %}Sign in - Dream Holiday{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                {{ form_start(form) }}

                <div class="row login-form-row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6 form-space">
                        <h3 class="form-title">Sign-In</h3>
                        <div class="form-group">
                            <label for="inputEmail">{{ form_label(form.email) }}</label>
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="form-group">
                            <label for="inputPassword">{{ form_label(form.password) }}</label>
                            {{ form_widget(form.password) }}
                        </div>
                        <div class="form-check">
                            {{ form_widget(form.checkbox) }} {{ form_label(form.checkbox) }}
                        </div>
                        <div class="my-custom-class-for-errors">
                            {% if error %}
                            <small id="emailHelp" class="form-text text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</small>
                            {% endif %}
                        </div>
                        {{ form_widget(form.submit) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
