{% extends 'base.html.twig' %}

{% block title %}Register - Dream Holiday{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                {{ form_start(form) }}

                <div class="row register-form-row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4 form-space">
                        <h3 class="form-title">Register</h3>
                            {% for error in form.vars.errors.form.getErrors(true) %}
                                <div class="alert alert-danger" role="alert">{{ error.message }}</div>
                            {% endfor %}
                        <div class="form-group">
                            <label for="inputFirstName"><span class="red">*</span>{{ form_label(form.firstName) }}</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <span class="input-group-addon"><i class="fa fa-user fa-lg" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                                {{ form_widget(form.firstName) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputLastName"><span class="red">*</span>{{ form_label(form.lastName) }}</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <span class="input-group-addon"><i class="fa fa-user fa-lg" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                                {{ form_widget(form.lastName) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail"><span class="red">*</span>{{ form_label(form.email) }}</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <span class="input-group-addon"><i class="fa fa-envelope fa-md" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                                {{ form_widget(form.email) }}
                            </div>
                            <div class="my-custom-class-for-errors">
                                {% if errors is defined %}
                                    {% if errors|length > 0 %}
                                        <script>
                                                //$('#registration_email').focus().css('border-color','red');
                                                $('#registration_email').focus();
                                        </script>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword"><span class="red">*</span>{{ form_label(form.password.first) }}</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                                {{ form_widget(form.password.first) }}
                            </div>

                            <div class="form-group">

                                <div id="popover-password">

                                    <div class="progress">
                                        <div id="password-strength" class="progress-bar progress-bar-success"
                                             role="progressbar"
                                             aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:0">
                                        </div>
                                    </div>
                                    <p>Password strength: <span id="result"> </span></p>
                                    <ul class="list-unstyled">
                                        <li>
                                            <span class="low-upper-case"><i class="fa fa-times"></i></span>&nbsp;
                                            1 small &amp; 1 capital letter
                                        </li>

                                        <li>
                                            <span class="one-number"><i class="fa fa-times"></i></span>&nbsp;
                                            Number (0-9)
                                        </li>

                                        <li>
                                            <span class="one-special-char"><i class="fa fa-times"></i></span>&nbsp;
                                            1 special character (!@#$%^&*)
                                        </li>

                                        <li>
                                            <span class="eight-character"><i class="fa fa-times"></i></span>&nbsp;
                                            8-16 characters
                                        </li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="inputRepeatPassword"><span class="red">*</span>{{ form_label(form.password.second) }}</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                    </div>
                                </div>
                                {{ form_widget(form.password.second) }}
                            </div>
                        </div>
                        <div class="form-check">
                            {{ form_widget(form.subscribeNewsletter) }}
                            <label class="form-check-label">{{ form_label(form.subscribeNewsletter) }}</label>
                        </div>
                        {{ form_widget(form.submit) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('javascript/passwordStrength.js') }}" type="text/javascript"></script>
{% endblock %}
