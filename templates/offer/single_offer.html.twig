{% extends 'base.html.twig' %}

{% block title %}
    {{ offer.offerName }} - Dream Holiday
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/single_offer.css') }}">
{% endblock %}
{% block page_content %}
    <div class="container-fluid">
        <div class="row justify-content-center mt-2">
            <div class="col-11 col-xl-10" id="main-content-container">
                <div id="offer-header">
                    <h1>{{ offer.offerName }}</h1>
                    <div class="stars-container">
                        {% if offer.rating %}
                            {% for i in 1..offer.rating %}
                                <span class="fas fa-star"></span>
                            {% endfor %}
                            {% if offer.rating<5 %}
                                {% for i in 1..(5-offer.rating) %}
                                    <span class="far fa-star"></span>
                                {% endfor %}
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="gallery-container col-lg-8 px-0">
                        <div class="gallery-hero">
                            <img src="{{ asset(offer.photosDirectory) }}/1.jpg"
                                 alt="{{ offer.offerName }}">
                        </div>
                    </div>
                    <div class="col-lg-4 d-none d-lg-block" id="reservation-column">
                        <div class="reservation-form-container">
                            <h2>Book now</h2>
                            <div id="reservation-form">
                                {% set form_desktop = reservationForm.createView %}
                                {{ form_start(form_desktop) }}
                                <div class="form-group">
                                    {{ form_label(form_desktop.adultNumber) }}
                                    {{ form_widget(form_desktop.adultNumber) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form_desktop.childNumber) }}
                                    {{ form_widget(form_desktop.childNumber) }}
                                </div>
                                <div class="offer-info-list">
                                    <div class="offer-info-list-item">
                                        <div class="icon-container">
                                            <i class="fas fa-calendar-check"></i>
                                        </div>
                                        {{ offer.departureDate|date("d.m.Y") }} - {{ offer.comebackDate|date("d.m.Y") }}
                                    </div>
                                    <div class="offer-info-list-item">
                                        <div class="icon-container">
                                            <i class="fas fa-clock"></i>
                                        </div>
                                        {% set difference = date(offer.comebackDate).diff(date(offer.departureDate)) %}
                                        {{ difference.days }} days
                                    </div>
                                    <div class="offer-info-list-item">
                                        <div class="icon-container">
                                            <i class="fas fa-plane-departure"></i>
                                        </div>
                                        {{ offer.departureSpot }}
                                    </div>
                                    <div class="offer-info-list-item">
                                        <div class="icon-container">
                                            {% include 'offer/offer_type_icons.html.twig' with {'offerType': offer.offerType} %}
                                        </div>
                                        {{ offer.offerType }}
                                    </div>
                                </div>
                                <div id="reservation-btn-container">
                                    {{ form_widget(form_desktop.submit) }}
                                </div>
                                {{ form_end(form_desktop) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="secondary-gallery-container">
                    <div class="gallery-secondary col-12">
                        {% for i in 0..photosCount - 2 %}
                            <img src="{{ asset(offer.photosDirectory) }}/{{ i+2 }}.jpg" alt="placeholder image" class="mb-2">
                        {% endfor %}
                    </div>
                </div>
                <div class="row" id="description-container">
                    <div class="col-12 px-lg-0">
                        <h3>Offer Description</h3>
                        <p>{{ offer.description }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

