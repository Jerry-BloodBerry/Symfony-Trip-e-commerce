{% extends 'base.html.twig' %}

{% block title %}
    {{ offer.offerName }} - Dream Holiday
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/single_offer.css') }}">
    <link rel="stylesheet" href="{{ asset('css/booking_filters_form.css') }}">
{% endblock %}
{% block page_content %}
    <div class="container-fluid">
        <div class="row justify-content-center mt-2">
            <div class="col-10 col-lg-9 col-xl-7" style="background-color: rgb(0,58,110)">
                <div id="offer-header">
                    <h1>{{ offer.offerName }}</h1>
                    <div class="stars-container">
                        {% if offer.rating %}
                            {% for i in 1..offer.rating %}
                                <span class="fas fa-star"></span>
                            {% endfor %}
                            {% if offer.rating<5 %}
                                {% for i in 1..(5-offer.rating) %}
                                    <span class="far fa-star"></span>
                                {% endfor %}
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="gallery-container col-lg-8 pr-0">
                        <div class="gallery-hero">
                            <img src="{{ asset(offer.photosDirectory) }}/1.jpg"
                                 alt="{{ offer.offerName }}">
                        </div>
                    </div>
                    <div class="col-lg-4 d-none d-lg-block" id="reservation-column">
                        <div class="reservation-form-container">
                            <h2>Book now</h2>
                            <div id="reservation-form">
                                {% set form_desktop = reservationForm.createView %}
                                {{ form_start(form_desktop) }}
                                {{ form_end(form_desktop) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="secondary-gallery-container">
                    <div class="gallery-secondary col-12">
                        <img src="https://via.placeholder.com/150" alt="placeholder image">
                        <img src="https://via.placeholder.com/150" alt="placeholder image">
                        <img src="https://via.placeholder.com/150" alt="placeholder image">
                        <img src="https://via.placeholder.com/150" alt="placeholder image">
                        <img src="https://via.placeholder.com/150" alt="placeholder image">
                        <img src="https://via.placeholder.com/150" alt="placeholder image">
                        <img src="https://via.placeholder.com/150" alt="placeholder image">
                    </div>
                </div>
                <div class="row" id="description-container">
                    <div class="col-12 px-lg-0">
                        <h3>Offer Description</h3>
                        <p>{{ offer.description }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

