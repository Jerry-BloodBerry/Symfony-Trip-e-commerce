{% extends ('base.html.twig') %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datepicker3.min.css') }}"
{% endblock %}
{% block page_content %}
    <div id="hero-presentation">
        <h1 class="text-center pt-5" id="title">travel the world</h1>
        <h2 class="text-center mt-2" id="subtitle"><span class="subtitle-ndash">&ndash;&ndash;</span> Book Today with Dream Holiday <span class="subtitle-ndash">&ndash;&ndash;</span></h2>
        <div class="row justify-content-center mt-4">
            <div id="search-form-container">
                {{ form_start(form) }}
                    {{ form_label(form.departureSpot) }}
                    <div class="input-group mb-2 mt-2 mr-sm-2">
                        <div class="input-group-prepend mt-2 mb-2 mr-1">
                            <i class="fa fa-map-marker"></i>
                        </div>
                        {{ form_widget(form.departureSpot) }}
                    </div>
                    {{ form_label(form.destination) }}
                    <div class="input-group mb-2 mt-2 mr-sm-2">
                        <div class="input-group-prepend mt-2 mb-2 mr-1">
                            <i class="fa fa-map-marker"></i>
                        </div>
                        {{ form_widget(form.destination) }}
                    </div>
                    {{ form_label(form.departureDate) }}
                    <div class="input-group mb-2 mt-2 mr-sm-2">
                        {{ form_widget(form.departureDate) }}
                        <div class="input-group-append mt-2 mb-2">
                            <i class="far fa-calendar-check"></i>
                        </div>
                    </div>
                    {{ form_label(form.comebackDate) }}
                    <div class="input-group mb-2 mt-2 mr-sm-2">
                        {{ form_widget(form.comebackDate) }}
                        <div class="input-group-append mt-2 mb-2">
                            <i class="far fa-calendar-check"></i>
                        </div>
                    </div>
                    <div class="input-group mb-2 mt-2 mr-sm-2 search-input-group">
                    {{ form_widget(form.submit, {'attr': {'class': 'search-form-submit-btn pr-2 pb-3 pt-3 pl-2'}}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <div id="featured-offers-presentation">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <a href="#" class="f-offer-card-link">
                    <div class="card f-offer-card">
                        <img class="card-img-top" src="{{ asset('images/country_cards/Australia_card.jpg') }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Australia Tour</h5>
                            <p class="card-offer-duration"><i class="fas fa-clock duration-icon"></i> Duration: 14 days</p>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <span class="far fa-star"></span>
                            <p class="card-offer-price">&dollar;380</p>
                        </div>
                    </div>
                </a>
                <a href="#" class="f-offer-card-link">
                    <div class="card f-offer-card">
                        <img class="card-img-top" src="{{ asset('images/country_cards/China_card.jpg') }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Discover China</h5>
                            <p class="card-offer-duration"><i class="fas fa-clock duration-icon"></i> Duration: 14 days</p>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <p class="card-offer-price">&dollar;1400</p>
                        </div>
                    </div>
                </a>
                <a href="#" class="f-offer-card-link">
                    <div class="card f-offer-card">
                        <img class="card-img-top" src="{{ asset('images/country_cards/Thailand_card.jpg') }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Thai Paradise</h5>
                            <p class="card-offer-duration"><i class="fas fa-clock duration-icon"></i> Duration: 14 days</p>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <span class="fas fa-star"></span>
                            <span class="far fa-star"></span>
                            <p class="card-offer-price">&dollar;1250</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        let today = new Date();
        let dd = String(today.getDate()).padStart(2, '0');
        let mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
        let yyyy = today.getFullYear();

        today = mm + '/' + dd + '/' + yyyy;
        $('.datepicker').datepicker({
            weekStart: 1,
            startDate: '-0d',
            daysOfWeekHighlighted: "6,0",
            format: "yyyy/mm/dd",
            autoclose: true,
            todayHighlight: true,
            clearBtn: true,
            orientation: "bottom left",
        });
    </script>
{% endblock %}